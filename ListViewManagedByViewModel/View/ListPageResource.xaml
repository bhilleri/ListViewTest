<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:View="clr-namespace:ListViewManagedByViewModel.View" xmlns:converter="clr-namespace:ListViewManagedByViewModel.Converter">

    <converter:SortTypeConverterToBool x:Key="SortTypeConverterToBool"/>

    <Style TargetType="{x:Type GridViewColumnHeader}" x:Key="ListViewGridViewColumnHeaderStyle">
        <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
        <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="#000020"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#000010"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="AllowDrop" Value="False"/>
        <Setter Property="Command" Value="{Binding commandInViewModel}"/>
        <Setter Property="CommandParameter" Value="{Binding Content, RelativeSource={RelativeSource Mode=Self}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Content="{TemplateBinding Content}"
                                              AllowDrop="{TemplateBinding AllowDrop}"/>
                            <View:OrderControl x:Name="SortIndicator"
                                               Margin="5,0,0,0"
                                               IsActive="{Binding RelativeSource={RelativeSource AncestorType=GridViewColumnHeader}, Path=Column.IsActive}"
                                               IsDescending="{Binding RelativeSource={RelativeSource AncestorType=GridViewColumnHeader}, Path=Column.IsDescending}"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SortIndicator" Property="IsMouseOverComponent" Value="True"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Control}" x:Key="ListPageStyle">
        <Setter Property="Background" Value="#000010"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Control}">
                    <ListView ItemsSource="{Binding ListItems}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              ScrollViewer.CanContentScroll="True">
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource ListViewGridViewColumnHeaderStyle}">
                                <View:GridViewColumnWithSortAndListFilter IsDescending="{Binding SortNameIsDescending}" 
                                                             IsActive="{Binding CurrentSortedProperty, Converter={StaticResource SortTypeConverterToBool}, ConverterParameter=Name}" 
                                                             Header="Name" 
                                                             Width="200">
                                    <View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" Foreground="#aaaaaa"/>
                                        </DataTemplate>
                                    </View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                </View:GridViewColumnWithSortAndListFilter>
                                <View:GridViewColumnWithSortAndListFilter  IsDescending="{Binding SortDescriptionIsDescending}" 
                                                             IsActive="{Binding CurrentSortedProperty, Converter={StaticResource SortTypeConverterToBool}, ConverterParameter=Description}" 
                                                              Header="Description" 
                                                              Width="200" >
                                    <View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}" Foreground="#aaaaaa"/>
                                        </DataTemplate>
                                    </View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                </View:GridViewColumnWithSortAndListFilter>
                                <View:GridViewColumnWithSortAndListFilter IsDescending="{Binding SortCreateAteIsDescending}" 
                                                             IsActive="{Binding CurrentSortedProperty, Converter={StaticResource SortTypeConverterToBool}, ConverterParameter=CreatedAt}" 
                                                             Header="CreatedAt" 
                                                             Width="200" >
                                    <View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CreatedAt}" Foreground="#aaaaaa"/>
                                        </DataTemplate>
                                    </View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                </View:GridViewColumnWithSortAndListFilter>
                                <View:GridViewColumnWithSortAndListFilter IsDescending="{Binding SortTypeIsDescending}" 
                                                             IsActive="{Binding CurrentSortedProperty, Converter={StaticResource SortTypeConverterToBool}, ConverterParameter=Type}" 
                                                             Header="Type" 
                                                             Width="200" >
                                    <View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Type}" Foreground="#aaaaaa"/>
                                        </DataTemplate>
                                    </View:GridViewColumnWithSortAndListFilter.CellTemplate>
                                </View:GridViewColumnWithSortAndListFilter>
                            </GridView>
                        </ListView.View>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Background="#000010"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="2"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Background" Value="#151530"/>
                                <Setter Property="BorderBrush" Value="#121225"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Padding="{TemplateBinding Padding}">
                                                <GridViewRowPresenter
                                                        Content="{TemplateBinding Content}"
                                                        Columns="{Binding RelativeSource={RelativeSource AncestorType=ListView},
                                                  Path=View.Columns}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
